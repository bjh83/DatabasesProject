# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.user.User.index

# Users
GET     /login                      controllers.user.User.displayLogin
POST    /login                      controllers.user.User.login
GET     /signup                     controllers.user.User.displaySignUp
POST    /signup                     controllers.user.User.signUp
GET     /logout                     controllers.user.User.logout

# Products
GET     /products                   controllers.user.Products.displayProducts
GET     /product/*productName       controllers.user.Products.product(productName)
GET     /additem/*productName       controllers.user.Products.addItem(productName)

# Shopping Cart
GET     /shoppingcart               controllers.user.ShoppingCart.displayShoppingCart
POST    /checkout                   controllers.user.ShoppingCart.checkout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Admin Section
GET     /admin                      controllers.admin.Admin.index
GET     /admin/login                controllers.admin.Admin.displayLogin
POST    /admin/login                controllers.admin.Admin.login
GET     /admin/logout               controllers.admin.Admin.logout

# Manage Admin Accounts
GET     /admin/admin_accounts       controllers.admin.AdminAccounts.accounts
POST    /admin/admin_new            controllers.admin.AdminAccounts.newAccount
GET     /admin/admin_delete/:id     controllers.admin.AdminAccounts.deleteAccount(id: Int)

# Admin Products
GET     /admin/products             controllers.admin.Products.products
POST    /admin/new_product          controllers.admin.Products.newProduct
GET     /admin/delete_product/:upc  controllers.admin.Products.deleteProduct(upc: Int)
