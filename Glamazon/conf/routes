# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.User.index

# Users
GET     /login                      controllers.User.displayLogin
POST    /login                      controllers.User.login
GET     /signup                     controllers.User.displaySignUp
POST    /signup                     controllers.User.signUp
GET     /logout                     controllers.User.logout

# Products
GET     /products                   controllers.Products.displayProducts
GET     /product/*productName       controllers.Products.product(productName)
GET     /additem/*productName       controllers.Products.addItem(productName)

# Shopping Cart
GET     /shoppingcart               controllers.ShoppingCart.displayShoppingCart
POST    /checkout                   controllers.ShoppingCart.checkout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
